<%- include('../Shared/Head.ejs') %>
    <title>Online Shop | Email Verification</title>
</head>

<body>

    <div class="container">

        <form>

            <div>
                <label for="">Email</label>
                <input class="primary-input email-input" type="text" >
            </div>
            
            <button type="submit" >Submit</button>

        </form>

    </div>

</body>

<script>

    document.querySelector('form').addEventListener('submit', async (ev) => {
        ev.preventDefault();

        const email_input = document.querySelector('.email-input').value;

        const res = await fetch('http://localhost:11111/email-verification', {
            method: "POST",
            headers: {
                "content-type": "application/json"
            },
            body: JSON.stringify({
                email: email_input,
            })
        })

        const obj = await res.json();

        console.log(obj);

        if(obj.success) {

            document.querySelector('.container').innerHTML = `
                <div class="message">
                    <h1>Check your email</h1>
                    <p>Password reset link is sent to your email address</p>
                    <a href="/signin">Return</a>
                </div>
            `;
            
        };

    })

</script>

<style>
    
    .container {
      display: grid;
      place-items: center;
      height: 100svh;
      border: 1px solid black;
    }
  
    form {
      border: 1px solid black;
      border-radius: 0.5rem;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }
  
    .primary-input {
      width: 100%;
      padding: 0.5rem;
      font-size: 1rem;
    }

    button {
      padding: 0.5rem;
      width: 90%;
      margin-inline: auto;
    }
  
    .message {
      border: 1px solid black;
      border-radius: 0.5rem;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }

  </style>